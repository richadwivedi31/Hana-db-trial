---
modules:
  - name: {{cap.appName}}-srv
    type: {{cap.pLanguage}}
    requires:
      - name: {{cap.appName}}-db

{{^cap.isMultitenant}}
  - name: {{cap.appName}}-db-deployer
    type: hdb
    path: {{& cap.db.0.path}}
    parameters:
      buildpack: nodejs_buildpack
{{#cap.isJava}}
    build-parameters:
      builder: custom
      commands:
        - npm run build
{{/cap.isJava}}
    requires:
      - name: {{cap.appName}}-db
{{/cap.isMultitenant}}

{{#cap.isJava}}
{{#cap.isMultitenant}}
  - name: {{cap.appName}}-mtx-sidecar
    type: nodejs
    path: mtx/sidecar
    requires:
      - name: {{cap.appName}}-db
{{/cap.isMultitenant}}
{{/cap.isJava}}

resources:
  - name: {{cap.appName}}-db
    {{^cap.isMultitenant}}
    type: com.sap.xs.hdi-container
    parameters:
      service: hana
      service-plan: hdi-shared
    {{/cap.isMultitenant}}
    {{#cap.isMultitenant}}
    type: org.cloudfoundry.managed-service
    parameters:
      service: service-manager
      service-plan: container
    {{/cap.isMultitenant}}
