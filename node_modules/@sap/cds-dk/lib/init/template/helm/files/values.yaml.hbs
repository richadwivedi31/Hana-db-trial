---
global:
  domain: null
  imagePullSecret: {}
srv:
  bindings: {}
  image:
    repository: <your-container-registry>/{{cap.appName}}-srv
    tag: latest
  {{#cap.isJava}}
  env:
    SPRING_PROFILES_ACTIVE: cloud
  {{/cap.isJava}}
  resources:
    limits:
      ephemeral-storage: 1G
      memory: {{#cap.isJava}}1G{{/cap.isJava}}{{^cap.isJava}}500M{{/cap.isJava}}
    requests:
      ephemeral-storage: 1G
      cpu: {{#cap.isJava}}1000m{{/cap.isJava}}{{^cap.isJava}}500m{{/cap.isJava}}
      memory: {{#cap.isJava}}1G{{/cap.isJava}}{{^cap.isJava}}500M{{/cap.isJava}}
  health:
    liveness:
      path: /
    readiness:
      path: /
