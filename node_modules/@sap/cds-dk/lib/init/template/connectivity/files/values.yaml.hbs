---
srv:
  additionalVolumes:
  - name: connectivity-secret
    volumeMount:
      mountPath: /bindings/connectivity
      readOnly: true
    projected:
      sources:
        - secret:
            name: {{cap.appName}}-connectivity-binding
            optional: false
        - secret:
            name: {{cap.appName}}-connectivity-binding
            optional: false
            items:
              - key: token_service_url
                path: url
        - configMap:
            name: {{cap.appName}}-connectivity-proxy-info
            optional: false
connectivity:
  serviceOfferingName: connectivity
  servicePlanName: connectivity_proxy
  secretName: {{cap.appName}}-connectivity-binding
  configMapName: {{cap.appName}}-connectivity-proxy-info
