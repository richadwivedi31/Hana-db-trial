---
{{#cap.isJava}}
{{#cap.isMultitenant}}
sidecar:
  bindings:
    auth:
      serviceInstanceName: xsuaa
{{/cap.isMultitenant}}
{{/cap.isJava}}
{{#cap.hasApprouter}}
approuter:
  bindings:
    auth:
      serviceInstanceName: xsuaa
{{/cap.hasApprouter}}
srv:
  bindings:
    auth:
      serviceInstanceName: xsuaa
xsuaa:
  serviceOfferingName: xsuaa
  servicePlanName: application
  parameters:
    xsappname: {{cap.appName}}
    tenant-mode: {{#cap.isMultitenant}}shared{{/cap.isMultitenant}}{{^cap.isMultitenant}}dedicated{{/cap.isMultitenant}}
{{#cap.hasApprouter}}
    oauth2-configuration:
      redirect-uris:
      - https://*.<your-cluster-domain>/**
{{/cap.hasApprouter}}
  config: xs-security.json
