---
modules:
  - name: {{cap.appName}}-srv
    type: {{cap.pLanguage}}
    requires:
      - name: {{cap.appName}}-auth

{{#cap.isJava}}
{{#cap.isMultitenant}}
  - name: {{cap.appName}}-mtx-sidecar
    type: nodejs
    path: mtx/sidecar
    requires:
      - name: {{cap.appName}}-auth
{{/cap.isMultitenant}}
{{/cap.isJava}}

resources:
  - name: {{cap.appName}}-auth
    type: org.cloudfoundry.managed-service
    parameters:
      service: xsuaa
      service-plan: application
      path: ./xs-security.json
      config:
        xsappname: {{cap.appName}}-${org}-${space}
        tenant-mode: {{#cap.isMultitenant}}shared{{/cap.isMultitenant}}{{^cap.isMultitenant}}dedicated{{/cap.isMultitenant}}
