---
modules:
  - name: {{cap.appName}}-srv
    type: {{cap.pLanguage}}
    {{#cap.isJava}}
    {{#cap.isMultitenant}}
    properties:
      CDS_MULTITENANCY_APPUI_TENANTSEPARATOR: "-"
    {{/cap.isMultitenant}}
    {{/cap.isJava}}
    requires:
      - name: {{cap.appName}}-auth
    {{#cap.isNodejs}}
    {{#cap.isMultitenant}}
      - name: app-api
        properties:
          SUBSCRIPTION_URL: ~{app-protocol}://\${tenant_subdomain}-~{app-uri}
    {{/cap.isMultitenant}}
    {{/cap.isNodejs}}
    {{#cap.isJava}}
      - name: app-api
        properties:
          CDS_MULTITENANCY_APPUI_URL: ~{url}
    {{/cap.isJava}}

  - name: {{cap.appName}}
    type: approuter.nodejs
    path: {{& ui.appPath}} # from cds.env.folders. Consider also cds.env.build.target -> gen/app
    parameters:
      keep-existing-routes: true
      disk-quota: 256M
      memory: 256M
    {{#cap.isMultitenant}}
    properties:
      TENANT_HOST_PATTERN: "^(.*)-${default-uri}"
    {{/cap.isMultitenant}}
    requires:
      - name: srv-api
        group: destinations
        properties:
          name: srv-api # must be used in xs-app.json as well
          url: ~{srv-url}
          forwardAuthToken: true
      {{#cap.isMultitenant}}
      - name: mtx-api
        group: destinations
        properties:
          name: mtx-api # must be used in xs-app.json as well
          url: ~{mtx-url}
      {{/cap.isMultitenant}}
    {{#cap.isMultitenant}}
    {{#cap.isNodejs}}
    provides:
      - name: app-api
        properties:
          app-protocol: ${protocol}
          app-uri: ${default-uri}
    {{/cap.isNodejs}}
    {{/cap.isMultitenant}}
    {{#cap.isJava}}
    provides:
      - name: app-api
        properties:
          url: ${default-url}
    {{/cap.isJava}}

resources:
  - name: {{cap.appName}}-auth
    type: org.cloudfoundry.managed-service
    parameters:
      service: xsuaa
      service-plan: application
      path: ./xs-security.json
      config:
        xsappname: {{cap.appName}}-${org}-${space}
        tenant-mode: {{#cap.isMultitenant}}shared{{/cap.isMultitenant}}{{^cap.isMultitenant}}dedicated{{/cap.isMultitenant}}
