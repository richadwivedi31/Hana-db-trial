---
{{#cap.hasXsuaa}}
xsuaa:
  parameters:
    oauth2-configuration:
      redirect-uris:
      - https://*.<your-cluster-domain>/**
{{/cap.hasXsuaa}}
approuter:
{{#cap.hasXsuaa}}
  bindings:
    auth:
      serviceInstanceName: xsuaa
{{/cap.hasXsuaa}}
  image:
    repository: <your-container-registry>/{{cap.appName}}-approuter
    tag: latest
  resources:
    limits:
      ephemeral-storage: 1G
      memory: 500M
    requests:
      ephemeral-storage: 1G
      cpu: 500m
      memory: 500M
  health:
    liveness:
      path: /
    readiness:
      path: /
backendDestinations: {}